{
    "version": "2.0.0",
    "tasks": [
        {
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=opencover",
                "/p:Exclude=[xunit*]*%2c[*Tests]*"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}